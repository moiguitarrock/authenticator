{
  "extends": "@tsconfig/node21/tsconfig.json",
  "compilerOptions": {
    "outDir": "dist",
    "lib": ["es2020"],
    "module": "es2022",
    "preserveConstEnums": true,
    "moduleResolution": "node",
    "strict": true,
    "sourceMap": true,
    "target": "es2022",
    "types": ["node"],
    "esModuleInterop": true
  },
  "include": ["src", "server.ts", "index.d.ts"],
  "exclude": ["node_modules"]
}
